{
    "manifest_version": 3,
    "name": "YouTube Alert",
    "version": "1.0",
    "action": {
        "default_icon": {
            "16": "favicon.ico"
        }
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/watch?*"
            ],
            "run_at": "document_start",
            "js": [
                "content.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "storage",
        "tabs",
        "notifications"
    ],
    "chrome_url_overrides": {
        "newtab": "newtab.html"
    }
}
