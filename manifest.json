{
    "manifest_version": 2,
    "name": "YouTube Alert",
    "version": "1.0",
    "permissions": [
        "webRequest",
        "tabs",
        "webNavigation"
    ],
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.youtube.com/watch*"
            ],
            "js": [
                "content.js"
            ],
            "all_frames": false
        }
    ],
    "browser_action": {
        "default_popup": "popup.html",
        "default_action": "popup.js"
    }
}
