{
  "manifest_version": 2,
  "name": "YouTube Video Alert",
  "version": "1.0",
  "description": "Alerts when a new YouTube video is opened",
  "permissions": ["tabs", "*://*.youtube.com/*", "activeTab"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": ["content.js"]
    }
  ]
}
